-- surrounding newlines are stripped, but not inside newlines
create or replace function haiku(x1 text, x2 text, x3 text) returns text as $$
{{x1}}
{{x2}}
{{x3}}
$$
language plmustache;
\echo

select haiku('The earth shakes', 'just enough', 'to remind us');
      haiku       
------------------
 The earth shakes+
 just enough     +
 to remind us
(1 row)

